package view;

import java.util.ArrayList;
import java.util.Scanner;

import controller.MusicCon;
import javazoom.jl.player.MP3Player;
import model.MusicVO;

public class Music_view {

	public static void main(String[] args) {

		MusicCon music_con = new MusicCon();

		Scanner sc = new Scanner(System.in);

		System.out.println("음악 재생 프로그램");
		boolean isPlaying = true;
		int index = 0;
		int num = 0;
		while (isPlaying) {
			System.out.println("1.음악 목록 보기 2. 음악 재생 3. 다음곡 4. 이전곡 5. 종료 .. ");
			int choice = sc.nextInt();

			switch (choice) {
			case 1:
             
				for (MusicVO s : music_con.getMusic()) {
					num++;
					System.out.println(num + "." + s.getTitle());
				}

				break;
			case 2:
                 music_con.musicPlay(index);
				
				break;
			case 3:
				music_con.nextMusic(index);
				break;
			case 4:
			    music_con.preMusic(index);
				break;

			case 5:
				isPlaying = false;
				music_con.stopMusic();
				break;
			default:
				System.out.println("잘못 입력했습니다.");
				break;
			}

		}

	}


}
