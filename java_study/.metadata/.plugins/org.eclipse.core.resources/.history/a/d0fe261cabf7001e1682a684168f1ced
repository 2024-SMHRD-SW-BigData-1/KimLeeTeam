package view;

import java.util.ArrayList;
import java.util.Scanner;

import javazoom.jl.player.MP3Player;
import model.MusicVO;

public class Music_view {

	
	
	public static void main(String[] args) {


		
		MP3Player mp3 = new MP3Player();
		
	      
	      ArrayList<MusicVO> music = new ArrayList<MusicVO>();
	      
	      //1
	      MusicVO bam = new MusicVO("밤양갱","C:/Users/SMHRD/Desktop/music/밤양갱.mp3");
	      music.add(bam);
	      
	      //2
	      music.add(new MusicVO("첫만남은계획대로되지않아","C:/Users/SMHRD/Desktop/music/첫만남은계획대로되지않아.mp3"));
	      music.add(new MusicVO("magnetic","C:/Users/SMHRD/Desktop/music/Magnetic.mp3"));
	      
	      
	      
	      Scanner sc = new Scanner(System.in);
	      
	      System.out.println("음악 재생 프로그램");
	      boolean isPlaying = true;
	      int index = 0;
	      int num = 0;
	      while(isPlaying) {
	         System.out.println("1.음악 목록 보기 2. 음악 재생 3. 다음곡 4. 이전곡 5. 종료 .. ");
	         int choice = sc.nextInt();
	         
	         switch (choice) {
	         case 1:
	            
	            for(MusicVO s : music) {
	               num++;
	               System.out.println(num + "."+ s.getTitle());
	            }
	            
	            break;
	         case 2:
	        	 
	            // music.get(index) -- > MusicVO(title,path)
	        	 musicPlay(mp3, music, index);
	            break;
	         case 3:
	            index++;
	            if(index >= music.size()) {
	               index = 0;
	            }
	            if(mp3.isPlaying()) {
	            	mp3.stop();
	            }
	            musicPlay(mp3, music, index);
	            break;
	         case 4:
	            index--;
	            if(index < 0) {
	               index = music.size()-1;
	            }
	            if(mp3.isPlaying()) {
	            	mp3.stop();
	            }
	            musicPlay(mp3, music, index);
	            break;

	         case 5:
	            isPlaying = false;
	            break;
	         default:
	            System.out.println("잘못 입력했습니다.");
	            break;
	         }
	         
	         
	      }
	
	}

	private static void musicPlay(MP3Player mp3, ArrayList<MusicVO> music, int index) {
		mp3.play(music.get(index).getPath());
		 System.out.println(music.get(index).getTitle()+ " 노래가 재생중 ...");
	}
	
}
