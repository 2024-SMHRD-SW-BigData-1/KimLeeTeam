package ex_arraylist;

import java.util.ArrayList;
import java.util.Scanner;

public class Music_main {

	   public static void main(String[] args) {

		      //jar -> java archive의 약자 : 자바의 클래스, 인터페이스 등 다양한 코드들을 집합
		      //    ㄴ 자바에서 사용될 수 있는 라이브러리의 배포를 위해 만들어진 파일 
		      
		      //프로젝트 우측클릭 - Build Path - Configure Build Path - Libraries탭으로 이동
		      // - ClassPath클릭 - Add External JARs 클릭 - 경로 찾아서 해당 jar 넣기 - apply and close까지
		      
		      //프로젝트를 생성할때 마다 넣어주셔야합니다.
		      
		      
		      //MP3Player 라는 클래스가 존재
		      
		      MP3Player mp3 = new MP3Player();
		      //1. 음악 재생기능 : .play(String 음악파일의 경로)
		      //2. 재생 중인지 확인 : .isPlaying() -- boolean으로 반환 재생중이면 true/ 아니면 false를 반환
		      //3. 음악 정지 기능 : .stop()
		      
		      // * 경로 설정 시 /로 변경 
		      //   mp3.play("C:/Users/smhrd1/Desktop/music/첫만남은계획대로되지않아.mp3");
		      
		      //한번에 import하는 단축키 -- ctrl shift o(알파벳)
		      
		      ArrayList<String> music_list = new ArrayList<String>();
		   
		      music_list.add("C:/Users/smhrd1/Desktop/music/밤양갱.mp3");
		      music_list.add("C:/Users/smhrd1/Desktop/music/첫만남은계획대로되지않아.mp3");
		      music_list.add("C:/Users/smhrd1/Desktop/music/Magnetic.mp3");
		      music_list.add("C:/Users/smhrd1/Desktop/music/Smart.mp3");
		      music_list.add("C:/Users/smhrd1/Desktop/music/한페이지가될수있게.mp3");
		      
		      ArrayList<String> music_title = new ArrayList<String>();
		      music_title.add("밤양갱");
		      music_title.add("첫만남은계획대로되지않아");
		      music_title.add("Magnetic");
		      music_title.add("Smart");
		      music_title.add("한페이지가될수있게");
		      
		      Scanner sc = new Scanner(System.in);
		      
		      System.out.println("음악 재생 프로그램");
		      boolean isPlaying = true;
		      int index = 0;
		      int num = 0;
		      while(isPlaying) {
		         System.out.println("1.음악 목록 보기 2. 음악 재생 3. 다음곡 4. 이전곡 5. 종료");
		         int choice = sc.nextInt();
		         
		         switch (choice) {
		         case 1:

		            //for-each
		            for(String s : music_list) {
		               num++;
		               System.out.println(num + "."+ s);
		            }
		            
		            break;
		         case 2:
		            //music_list.get(index)  -> mp3.play(music_list.get(index)
		            
		            mp3.play(music_list.get(index));
		            System.out.println(music_title.get(index) +" 노래가 재생중....");
		            break;
		         case 3:
		            //마지막곡에서 다음곡을 -첫번째 곡
		            index++;
		            if(index >= music_list.size()) {
		               index = 0;
		            }
		            //노래가 겹쳐서 나오는중.. 
		            if(mp3.isPlaying()) {
		               mp3.stop();
		            }
		            mp3.play(music_list.get(index));
		            System.out.println(music_title.get(index) +" 노래가 재생중....");
		            break;
		         case 4:
		            index--;
		            if(index < 0) {
		               index = music_list.size()-1;
		            }
		            if(mp3.isPlaying()) {
		               mp3.stop();
		            }
		            mp3.play(music_list.get(index));
		            System.out.println(music_title.get(index) +" 노래가 재생중....");
		            
		            mp3.play(music_list.get(index));
		            
		            //첫번째 곡에서 이전곡 - 마지막 곡
		            break;
		         
		         case 5:
		            isPlaying = false;
		            break;
		         default:
		            System.out.println("잘못 입력했습니다.");
		            break;
		         }
		         
		         
		      }
		      
		      
		      
		      
		   }

		}