package Controller;

import java.util.ArrayList;

import Model.StudentDAO;
import Model.StudentDTO;

public class Controller {

   
   // 학생 등록을 위해 Main에서 보내준 dto를 받아줄
   // insert() 만들어주자!
   public void insert(StudentDTO dto) {
      // DAO에 있는 insert에 dto를 보내주는 작업
      // 1. StudentDAO 객체 생성
      StudentDAO dao = new StudentDAO();
      // 2. insert로 dto보내주기
      int cnt = dao.insert(dto);
      if(cnt > 0) {
         System.out.println("학생 등록 성공!");
      }else {
         System.out.println("학생 등록 실패!");
      }
   }
   
   // 학생 삭제를 위해 Main에서 보내준 dto를 받아줄
   // delete() 만들어주자!
   public void delete(StudentDTO dto) {
      // dto를 DAO에 있는 delete()에 보내주자!
      StudentDAO dao = new StudentDAO();
      int cnt = dao.delete(dto);
      if(cnt > 0) {
         System.out.println("데이터 삭제 성공");
      }else {
         System.out.println("데이터 삭제 실패");
      }
      
   }
   
   
   // 학생 정보 수정을 위해 Main에서 보내준 dto를 받아줄
   // update() 만들어주자!
   public void update(StudentDTO dto) {
      
      StudentDAO dao = new StudentDAO();
      int cnt = dao.update(dto); // cnt
      if(cnt > 0) {
         System.out.println("수정 성공!");
      }else {
         System.out.println("수정 실패..");
      }
   }
   
   public void selectAll() {
	   // DAO에 전체 조회를 요청해서 결과값을 받아오는 기능
	   // 결과값을 Main으로 반환
	   StudentDAO dao = new StudentDAO();
	   ArrayList<StudentDTO> list = dao.selectAll();
	   
	   // list에 있는 내용을 출력
	   for(int i =0; i < list.size(); i++) {
		   System.out.println(list.get(i).getName());
		   System.out.println(list.get(i).getAge());
		   System.out.println(list.get(i).getGender());
		   System.out.println(list.get(i).getCls());
		   System.out.println();
	   }
	   
   }
   
   
   public void selectOne(StudentDTO dto) {
	   StudentDAO dao = new StudentDAO();
	   dao.selectOne(dto);
	   
   }
   
   
   
}
