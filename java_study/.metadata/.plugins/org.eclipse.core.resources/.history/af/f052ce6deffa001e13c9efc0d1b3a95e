package View;

import java.util.Scanner;

import Controller.Controller;
import Model.StudentDTO;

public class Main {

   public static void main(String[] args) {

      
      Scanner sc = new Scanner(System.in);   
      
      System.out.println("==== 학생 관리 프로그램 ====");
      while(true) {
         System.out.print("[1]학생전체조회 [2]학생검색 [3]학생등록 [4]학생정보수정 [5]학생정보삭제 [6]프로그램종료 >>");
         int select = sc.nextInt();
         if(select == 1) {
            // 학생 전체 조회
        	 System.out.println("==== 학생 목록 ====");
        	 Controller con = new Controller();
        	 con.selectAll();
        	 
         }else if(select == 2) {
            // 학생 검색
        	 System.out.println("학생 이름 >> ");
        	 String name = sc.next();
        	 //name도 StudentDTO 자료형으로 만들어서 캡슐화!!
        	 StudentDTO dto = new StudentDTO(name);
        	 Controller con = new Controller();
        	 con.selectOne();
        	 //학생 이름(나이) 성별 학과
        	 
        	 
         }else if(select == 3) {
            // 학생 등록 - insert()
            System.out.println("==== 학생 등록 ====");
            System.out.print("이름 >> ");
            String name = sc.next();
            System.out.print("나이 >> ");
            int age = sc.nextInt();
            System.out.print("성별 >> ");
            String gender = sc.next();
            System.out.print("학과 >> ");
            String cls = sc.next();
            
            // StudentDTO 객체 생성
            StudentDTO dto = new StudentDTO(name, age, gender, cls);
            // 1. Controller 객체생성
            Controller con = new Controller();
            // 2. Controller insert에 접근
            con.insert(dto);
            
         }else if(select == 4) {
            // 학생 정보 수정 - update()
            System.out.println("==== 학생 정보 수정 ====");
            System.out.print("이름 >> ");
            String name = sc.next();
            System.out.println("나이 >> ");
            int age = sc.nextInt();
            System.out.print("변경할 학과를 입력하세요 >> ");
            String cls = sc.next();
            // 사용자가 입력한 이름과 나이에 일치하는 행의 학과를 변경
            // + name, age, cls는 하나의 자료형 StudentDTO로 전송될 수 있도록 만들어주세요.
            StudentDTO dto = new StudentDTO(name, age, cls);
            
            Controller con = new Controller();
            con.update(dto);
            
            
            
            
         }else if(select == 5){
            // 학생 정보 삭제 - delete()
            System.out.print("이름 >> ");
            String name = sc.next();
            System.out.print("학과 >> ");
            String cls = sc.next();
            
            StudentDTO dto = new StudentDTO(name, cls);
            
            // dto를 Controller한테 보내주자!
            Controller con = new Controller();
            con.delete(dto);
            
            
            
         }else {
            System.out.println("프로그램이 종료되었습니다.");
            break;
         }
      }
      
      
   }

}
